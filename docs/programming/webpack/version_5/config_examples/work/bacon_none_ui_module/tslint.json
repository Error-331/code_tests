{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "array-type": [true, "array-simple"],
    "curly": [true, "ignore-same-line"],
    "eofline": true,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "max-classes-per-file": [false, 10],
    "max-line-length": [true, 120],
    "member-access": false,
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "one-line": [true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": false,
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, {
      "anonymous": "never",
      "constructor": "never",
      "method": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "jsRules": {
    "curly": [true, "ignore-same-line"],
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 120],
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "one-line": [true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, {
      "anonymous": "always",
      "constructor": "never",
      "method": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": []
}
